<odoo>

    <record id="school_class_form_view" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="class_id"/>
                            <field name="division"/>
                            <field name="float_no"/>
                            <field name="document"/>
                            <field name="true"/>
                            <field name="image"/>
                            <field name="date"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="admn_date"/>
                            <field name="product_id"/>
                            <field name="product_ids"/>
                            <field name="price"/>
                            <field name="currency_id"/>
                            <field name="officer_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create School details
            </p>
        </field>
    </record>

    <menuitem id="school_root" name="School" sequence="-1"/>
    <menuitem id="school_exams_menu" parent="school_root"
                name="School" action="action_student" sequence="4"/>

    <menuitem id="res_partner_menu_customer"
              name="Customers"
              parent="school_root"
              action="base.action_partner_form"
              sequence="5"/>
</odoo>